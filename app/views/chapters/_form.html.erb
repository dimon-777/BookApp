<%= form_for([@book, @chapter]) do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
 
  <div class="actions">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
